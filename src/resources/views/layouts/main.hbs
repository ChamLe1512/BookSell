   <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
   <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
   <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script>
        const login = document.querySelector('#login');
        const modal = document.querySelector('.modal');
        const backMainHome = document.querySelector('#back-main-home');
        const switchLogin = document.querySelector(".auth-form_switch-btn");
        const screenClick = document.querySelector('.modal_overlay');
        const formResgister = document.querySelector('.auth-form-register__click');
        const formLogin = document.querySelector('.auth-form-login__click');


        switchLogin.addEventListener('click',()=>{
            formResgister.style.display='none';
            formLogin.style.display='block';
            
        });

        login.addEventListener('click',myFunction);
        backMainHome.addEventListener('click',()=>{
            modal.style.display='none';
        });

        function myFunction() {
            modal.style.visibility='visible';
            formLogin.style.display='none';
        
        }
        screenClick.addEventListener('click',()=>{
            modal.style.visibility='hidden';
            formResgister.removeAttribute('style');
            formLogin.removeAttribute('style');
        

        })  
    </script>

</body>
</html>